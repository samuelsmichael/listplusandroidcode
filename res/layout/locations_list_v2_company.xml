<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TextView android:id="@+id/TextViewjdCompany" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:background="@drawable/title_bar_portrait"
		android:shadowRadius="2.75" android:textAppearance="@android:style/TextAppearance.WindowTitle"
		android:shadowColor="#BB000000">
	</TextView>
	
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
	  
  		<ListView android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@android:id/list">
		</ListView>
  
	  	<TextView android:id="@+id/android:empty"
	          android:layout_width="wrap_content"
	          android:textSize="22sp"
	          android:textColor="#FF000000"
	          android:textStyle="bold"
	          android:layout_gravity="center"
	          android:paddingTop="133dip"
	        	android:layout_height="wrap_content"
	        	android:text="@string/no_locations"/>
	  
	  
	</LinearLayout>
</LinearLayout>
