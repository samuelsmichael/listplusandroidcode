<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:layout_height="wrap_content">
		<TextView android:textSize="14sp" android:textStyle="bold"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/notification_items_you_need_at">
		</TextView>
		<TextView android:id="@+id/notification_name"
			android:textSize="20sp" android:textStyle="bold"
			android:layout_width="wrap_content" android:paddingLeft="12sp"
			android:paddingBottom="10sp" android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
	<TextView android:id="@+id/TextView01a"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/notification_hint" android:background="@drawable/title_bar_portrait"
		android:shadowRadius="2.75" android:textAppearance="@android:style/TextAppearance.WindowTitle"
		android:shadowColor="#BB000000">
	</TextView>
	<TextView android:textSize="14sp" android:textStyle="bold"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/notelocaddr"
	>
	</TextView>
	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="fill_parent">

		<ListView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@android:id/list" />
	</LinearLayout>
</LinearLayout>
