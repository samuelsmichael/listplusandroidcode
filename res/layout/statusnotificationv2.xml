<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
- 		<RelativeLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:id="@+id/top_control_bar">
				<LinearLayout android:id="@+id/LinearLayout01"
					android:layout_width="fill_parent" android:orientation="vertical"
					android:layout_height="wrap_content">
					<LinearLayout android:id="@+id/LinearLayout01"
						android:layout_width="fill_parent" android:orientation="horizontal"
						android:layout_height="wrap_content">
						<TextView android:textSize="14sp" android:textStyle="bold"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:id="@+id/LocationSlashContactHeading">
						</TextView>
						<TextView android:id="@+id/notification_name"
							android:textSize="20sp" android:textStyle="bold"
							android:layout_width="wrap_content" android:paddingLeft="12sp"
							android:paddingBottom="10sp" android:layout_height="wrap_content">
						</TextView>
					</LinearLayout>
					<LinearLayout android:id="@+id/LinearLayout01address"
						android:layout_width="fill_parent" android:orientation="horizontal"
						android:layout_height="wrap_content">
						<TextView android:textSize="14sp" android:textStyle="bold"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="Address: ">
						</TextView>
						<TextView android:textSize="20sp" android:textStyle="bold"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:id="@+id/notelocaddr" 
						></TextView>
					</LinearLayout>	
					<TextView android:id="@+id/TextView01a"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:text="Needs" 
						android:background="@drawable/title_bar_portrait"				
						android:shadowRadius="2.75" android:textAppearance="@android:style/TextAppearance.WindowTitle"
						android:shadowColor="#BB000000">
					</TextView>
				</LinearLayout>
		</RelativeLayout> 
		<LinearLayout android:id="@+id/bottom_control_bar" android:layout_width="fill_parent" 
				android:layout_height="wrap_content" android:layout_alignParentBottom="true">
  				<Button 
	  				android:id="@+id/statnote_mapit" 
	  				android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Map it!" /> 
  		</LinearLayout>
	 		<ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="0dip" 
	  			android:choiceMode="singleChoice" android:layout_above="@id/bottom_control_bar" android:layout_below="@id/top_control_bar"
	  		/> 
</RelativeLayout>
