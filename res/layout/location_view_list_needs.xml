<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#EE999999"
				android:id="@+id/location_view_list_needs_need" android:layout_width="wrap_content" android:layout_height="wrap_content">
			</TextView>
			<TextView
				android:textSize="11sp" android:paddingLeft="5dip"
				android:textColor="#EE999999"
				android:id="@+id/location_view_list_needs_item" android:layout_width="wrap_content" android:layout_height="wrap_content">
			</TextView>
		</LinearLayout>
</LinearLayout>
