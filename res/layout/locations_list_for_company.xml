<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:divider="#300"
  >
	  		<LinearLayout
	  			android:orientation="vertical"
	  			android:layout_width="fill_parent"
	  			android:layout_height="wrap_content"
	  		>
	  			<TextView 
	  				android:id="@+id/locationlist_phoneid_name"
	  				android:textSize="1sp"
	  				android:width="1sp"
	  				android:textStyle="bold"
	  				android:layout_width="wrap_content"
	  				android:layout_height="wrap_content">
	  			</TextView>
	  			<TextView 
	  				android:id="@+id/locationlist_name"
	  				android:textSize="18sp"
	  				android:textStyle="bold"
	  				android:layout_width="fill_parent"
	  				android:layout_height="wrap_content">
	  			</TextView>
	  			<LinearLayout
	  				android:orientation="horizontal"
	  				android:layout_width="fill_parent"
	  				android:layout_height="wrap_content"
	  			>
					<TextView 
		  				android:textSize="11sp"
		  				android:textStyle="normal"
		  				android:layout_width="wrap_content"
		  				android:layout_height="wrap_content"
		  				android:text="@string/locations_company_label">
		  			</TextView>
					<TextView 
		  				android:id="@+id/locationlist_company"
		  				android:textSize="11sp"
		  				android:textStyle="bold"
		  				android:layout_width="wrap_content"
		  				android:layout_height="wrap_content"
		  				android:paddingLeft="5sp">
		  			</TextView>
					<TextView 
		  				android:textSize="11sp"
		  				android:textStyle="normal"
		  				android:layout_width="wrap_content"
		  				android:layout_height="wrap_content"
		  				android:text="@string/locations_address_label"
		  				android:paddingLeft="10sp">
		  			</TextView>
					<TextView 
		  				android:id="@+id/locationlist_address"
		  				android:textSize="11sp"
		  				android:textStyle="bold"
		  				android:layout_width="wrap_content"
		  				android:layout_height="wrap_content"
		  				android:paddingLeft="5sp">
		  			</TextView>
					  				
	  			</LinearLayout>
	  		</LinearLayout>
	  </LinearLayout>
